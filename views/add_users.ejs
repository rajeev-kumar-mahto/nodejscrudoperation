<%- include('layout/header.ejs')%>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
       <div class="card shadow">
        <div class="card-header bg-primary">
            <h3 class="text-light text-center">Add New User</h3>
        </div>
        <div class="card-body p-4">
            <form action="/add" method="post" id="add-form"enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name">Name</label>
                    <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter the Name" required>
                </div>
                <div class="mb-3">
                    <label for="Email">Email</label>
                    <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter the Email" required>
                </div>
                <div class="mb-3">
                    <label for="phone">Phone</label>
                    <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Enter the Phone No" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Select Image</label>
                    <input type="file" name="image" class="form-control form-control-lg" placeholder="choose the File" value="image" required>
                </div>
                <div class="">
                    
                    <input type="submit" name="submit" value="Add User" class="btn btn-success btn-lg" placeholder="choose the File" required>
                </div>
            </form>
        </div>
       </div>

        </div>
    </div>
</div>
<%- include('layout/footer.ejs')%>